<AuthorizeView>
    <Authorized>
        Hello, @context.User.Identity.Name!
        <table class="table">
            <thead>
                <tr>
                    <th>Key</th>
                    <th>Value</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var claim in context.User.Claims)
                {
                    <tr>
                        <td>@claim.Type</td>
                        <td>@claim.Value</td>
                    </tr>
                }
            </tbody>
        </table>
        <a href="LogOut">Log out</a>
    </Authorized>
</AuthorizeView>